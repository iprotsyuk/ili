{
    "name": "`ili",
    "description": "`ili: A toolbox for molecular mapping in 2D and 3D. Map your spatial molecular data onto photos, geographical maps, and 3D surfaces.",
    "version": "0.2",
    "manifest_version": 2,
    "app": {
        "background": {
            "scripts": ["chromeapp-background.js"]
        }
    },
    "requirements": {
        "3D": {
            "features": ["webgl"]
        }
    },
    "permissions": [
        "fileSystem"
    ],
    "icons": { "16": "img/favicon_16.png",
           "48": "img/logo_48.png",
          "128": "img/logo_128.png" }
}
